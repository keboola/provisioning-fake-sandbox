{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "5.0.*",
        "symfony/dotenv": "5.0.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.0.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/yaml": "5.0.*"
    },
    "require-dev": {
        "ext-json": "*",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "keboola/coding-standard": "^9.0",
        "keboola/php-temp": "^2.0",
        "phpstan/phpstan": "^0.12.2",
        "phpunit/phpunit": "^8.5",
        "symfony/phpunit-bridge": "^5.0",
        "symfony/test-pack": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Keboola\\FakeSandbox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\Tests\\FakeSandbox\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],

        "tests": "phpunit --coverage-clover ./build/logs/clover.xml",
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor,cache,Kernel.php,bootstrap.php --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor,cache,Kernel.php,bootstrap.php --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor --exclude cache --exclude Kernel.php --exclude bootstrap.php .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.0.*"
        }
    }
}
